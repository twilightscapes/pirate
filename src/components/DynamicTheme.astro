---
import { getEntry } from 'astro:content';
const styleAppearance = await getEntry('styleapps', 'index');
---

<script define:vars={{ lightBg: styleAppearance.data.lightBg, darkBg: styleAppearance.data.darkBg, lightAccent: styleAppearance.data.lightAccent, darkAccent: styleAppearance.data.darkAccent, lightAccent2: styleAppearance.data.lightAccent2, darkAccent2: styleAppearance.data.darkAccent2, lightHeader: styleAppearance.data.lightHeader, darkHeader: styleAppearance.data.darkHeader, lightLink: styleAppearance.data.lightLink, darkLink: styleAppearance.data.darkLink, lightText: styleAppearance.data.lightText, darkText: styleAppearance.data.darkText, borderRadius: styleAppearance.data.borderRadius }}>

function applyTheme() {
  document.documentElement.style.setProperty('--lightBg', lightBg);
  document.documentElement.style.setProperty('--darkBg', darkBg);
  document.documentElement.style.setProperty('--lightAccent', lightAccent);
  document.documentElement.style.setProperty('--darkAccent', darkAccent);
  document.documentElement.style.setProperty('--lightAccent2', lightAccent2);
  document.documentElement.style.setProperty('--darkAccent2', darkAccent2);
  document.documentElement.style.setProperty('--lightHeader', lightHeader);
  document.documentElement.style.setProperty('--darkHeader', darkHeader);
  document.documentElement.style.setProperty('--lightLink', lightLink);
  document.documentElement.style.setProperty('--darkLink', darkLink);
  document.documentElement.style.setProperty('--lightText', lightText);
  document.documentElement.style.setProperty('--darkText', darkText);
  document.documentElement.style.setProperty('--borderRadius', borderRadius);
}


applyTheme();
document.addEventListener('astro:page-load', applyTheme);
</script>

